\setbeamertemplate{navigation symbols}{}

%%%%% Section Page

\defbeamertemplate{section page}{customizedSection}[1][]{%

  \begin{centering}

    \begin{beamercolorbox}[sep=12pt,center]{fg=white,bg=black}
      {\usebeamerfont*{frametitle}\normalsize\inserttitle\par}
    \end{beamercolorbox}

    \begin{beamercolorbox}[sep=12pt,center]{fg=white,bg=black}
      \Large\playfairblack\insertsection\par
    \end{beamercolorbox}
    
  \end{centering}
  
  \tikz[overlay,remember picture]
  \node[opacity=1, at=(current page.south east),anchor=south east,inner sep=0pt] {\includegraphics[scale=0.4]{logos/circle.png}}; 
}
\AtBeginSection{%
  \begingroup
    \setbeamertemplate{footline}[section footline]
    \begin{frame}
      \sectionpage
    \end{frame}
  \endgroup
}


%%%%% TITLE PAGE

\defbeamertemplate*{title page}{customizedTitle}[1][]
{
  \begin{tikzpicture}[overlay, remember picture]
    
          \node at (10,-1.3) {\includegraphics[width=0.65\textwidth]{logos/NovaTitlePage.png}};

          \node at (0.65,-4.55) {\includegraphics[scale=0.15]{logos/NovaPrincipalV2.eps}};
          \node [anchor=south west,scale=1] at (2.5,-5.2) [fill=white, minimum width=17.1cm, minimum height=0.70cm] {};
          \node [anchor=south west,scale=0.7] at (2.5,-4.8) [fill=black, minimum width=17.1cm, minimum height=0.10cm] {};

          \node [anchor = west] at (-.5,2) {\begin{minipage}{15cm}\textbf{\huge\playfairOsF\inserttitle}\end{minipage}};
          \node [anchor = west] at (-.5,0) {\begin{minipage}{15cm}{\Large \insertsubtitle}\end{minipage}};
          \node [anchor = west] at (-.5,-3) {\begin{minipage}{15cm}\MakeUppercase{\insertauthor}\end{minipage}};

  \end{tikzpicture}

}

\AtBeginDocument{%
    \begingroup
      \setbeamertemplate{footline}{}
      \begin{frame}
        \titlepage
      \end{frame}
    \endgroup
}

\usebeamertemplate{customizedTitle}
\setbeamertemplate{section page}[customizedSection]

